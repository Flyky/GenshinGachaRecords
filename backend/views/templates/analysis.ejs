<div>
    <el-card style="width: 40%; min-width: 450px;" class="card-box-inline">
        <div slot="header" class="clearfix">
            <span>物品分组统计</span>
            <el-switch
                style="display: inline; float: right"
                v-model="groupAnaySwitch"
                active-color="#13ce66"
                inactive-color="#6699ff"
                active-text="角色"
                inactive-text="武器">
            </el-switch>
        </div>
        <div v-show="groupAnaySwitch">
            <div style="width: 49%;" class="analysis-group-tables-box">
                <el-table
                    size="mini" height="calc(100vh * 0.75)"
                    :data="tableGroupAnayCha5">
                    <el-table-column
                        prop="name"
                        label="名称">
                    </el-table-column>
                    <el-table-column sortable
                        prop="count"
                        label="数量"
                        width="80">
                    </el-table-column>
                </el-table>
            </div>
            
            <div style="display: inline-block; width: 49%;" class="analysis-group-tables-box">
                <el-table
                    size="mini" height="calc(100vh * 0.75)"
                    :data="tableGroupAnayCha4">
                    <el-table-column
                        prop="name"
                        label="名称">
                    </el-table-column>
                    <el-table-column sortable
                        prop="count"
                        label="数量"
                        width="80">
                    </el-table-column>
                </el-table>
            </div>
            
        </div>
        <div v-show="!groupAnaySwitch">
            <div style="display: inline-block; width: 33%;" class="analysis-group-tables-box">
                <el-table
                    size="mini" height="calc(100vh * 0.75)"
                    :data="tableGroupAnayArm5">
                    <el-table-column
                        prop="name"
                        label="名称">
                    </el-table-column>
                    <el-table-column sortable
                        prop="count"
                        label="数量"
                        width="80">
                    </el-table-column>
                </el-table>
            </div>
            
            <div style="display: inline-block; width: 32%;" class="analysis-group-tables-box">
                <el-table
                    size="mini" height="calc(100vh * 0.75)"
                    :data="tableGroupAnayArm4">
                    <el-table-column
                        prop="name"
                        label="名称">
                    </el-table-column>
                    <el-table-column sortable
                        prop="count"
                        label="数量"
                        width="80">
                    </el-table-column>
                </el-table>
            </div>

            <div style="display: inline-block; width: 33%;" class="analysis-group-tables-box">
                <el-table
                    size="mini" height="calc(100vh * 0.75)"
                    :data="tableGroupAnayArm3">
                    <el-table-column
                        prop="name"
                        label="名称">
                    </el-table-column>
                    <el-table-column sortable
                        prop="count"
                        label="数量"
                        width="80">
                    </el-table-column>
                </el-table>
            </div>
        </div>
    </el-card>

    <div class="card-box-inline" style="width: 56%; min-width: 450px;">
        <el-card style="width: 100%;">
            <div id="ana-year-month" style="width: 100%;height:400px;"></div>
        </el-card>

        <el-card style="width: 100%;">
            <div slot="header" class="clearfix">
                <span>Daily分析热力图</span>
                <div style="float: right; display: inline;">
                    <el-select size="mini" v-model="queryOnHeatmap.year" 
                    placeholder="年份" @change="analysisDailyData()">
                        <el-option
                            v-for="item in optionsYears"
                            :key="item.value"
                            :label="item.label"
                            :value="item.value">
                        </el-option>
                    </el-select>
                    <el-select size="mini" v-model="queryOnHeatmap.gacha_type" 
                    clearable placeholder="卡池类型" @change="analysisDailyData()">
                        <el-option
                            v-for="item in optionsGachaType"
                            :key="item.value"
                            :label="item.label"
                            :value="item.value">
                        </el-option>
                    </el-select>
                </div>
            </div>

            <div id="dailyHeatmap" style="width: 100%;height:200px;"></div>
        </el-card>
    </div>
    
</div>